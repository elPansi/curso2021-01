<?xml version="1.0" encoding="utf-8"?>
<odoo>        
        <record id="view_helpdesk_ticket_tree_view" model="ir.ui.view">
            <field name="name">view.helpdesk.tree.view</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <tree string="Ticket">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="time" widget="float_time"/>
                    <!-- <separator string=" " colspan="4"/> -->
                    <!-- <field name="space"/>  -->
                    <field name="user_id"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="action_ids" widget="many2many_tags"/>
                    <field name="date"/>
                    <field name="date_limit" widget="remaining_days"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        
        <record id="view_helpdesk_ticket_form" model="ir.ui.view">
            <field name="name">view.helpdesk_ticket.form</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <form string="Ticket">
                <header>
                    <!--
                    <button string="Asignar" name ="do_assign" type="object" attrs="{'invisible': [('state', '!=', 'nuevo')]}"/>
                    -->
                    <button string="Asignar" name="asignar" type="object" states="nuevo"/>
                    <button string="En proceso" name="proceso" type="object" states="asignado"/>
                    <button string="Cancelar" name= "cancelar" type="object" states="nuevo, asignado, pendiente, proceso"/>
                    <button string="Finalizar" name="finalizar" type="object" states="nuevo, asignado, pendiente, proceso"/>
                    <button string="Recover" name="do_recover" type="object" states="resuelto"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_limit"/>
                        </group>
                        <group>
                            <field name="user_id" options="{'no_create': True, 'no_open': True}"/>  <!--Esto para que era?-->
                            <field name="assigned"/>
                            <field name="ticket_qty"/>
                            <field name="time" widget="float_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                            <group>
                                <field name="tag_name"/>
                                <!-- <button string="Create Tag" name="create_tag" type="object"/> -->
                                <button string="Create Tag" name="create_tag" type="object"/>
                                
                                <button string="Create new Tag" 
                                name="%(helpdesk_fernandohernandez.action_new_tag)d" 
                                type="action" 
                                context="{'default_name': tag_name,}"/>
                               
                            </group>
                            <field name="tag_ids" context="{'form_view_ref':'helpdesk_fernandohernandez.view_helpdesk_ticket_tag_simple_form'}"
                            domain="[('public', '=', True)]"/>
                        </page>
                        <page string="Action">
                            <field name="action_ids" context="{'default_date':date}"> <!-- pasa el date, del parent al hijo -->
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="time"/>
                                </tree>
                                <form>
                                    <group name="action">
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="time"/>
                                    </group>
                                </form>
                            </field>  
                        </page>
                        <page string="Quality">
                            <group string="Corrective action" >
                                <field name="action_corrective" nolabel="1"/>
                            </group>
                            <group string="Preventive Action">
                                <field name="action_preventive" nolabel="1"/>
                            </group>
                        </page>                        
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>
        <record id="view_helpdesk_search" model="ir.ui.view">
            <field name="name">view.helpdesk.search</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <search string="Ticket">
                    <field name="name"/>
                    <field name="user_id"/>
                    <filter string="Assigned" name="assigned_to_search" domain="[('user_id', '!=', False)]"/>
                    <filter string="No date limit" name="no_date_limit" domain="[('date_limit', '!=', False)]"/>
                    <filter string="Date limit" name="date_limit" context="{'group_by': 'date_limit'}"/>
                    <filter string="Assigned to" name="user_id" context="{'group_by': 'user_id'}"/>
                </search>
            </field>
        </record>
        <record id="view_helpdesk_pivot" model="ir.ui.view">
            <field name="name">view.helpdesk.pivot</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <pivot string="Ticket">
                    <field name="date" interval="month" type="col"/>
                    <field name="user_id" type="row"/>       
                    <field name="state" type="col"/>                         
                    <field name="time" type="measure" widget="float_time"/>  
                    <field name="sequence" invisible="1"/> 
                </pivot>
            </field>
        </record>     
        <record id="view_helpdesk_graph" model="ir.ui.view">
            <field name="name">view.helpdesk.graph</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <graph string="Ticket">
                    <field name="user_id"/>                                
                    <field name="time" type="measure" widget="float_time"/>   
                    <field name="sequence" invisible="1"/> 
                </graph>
            </field>
        </record>    
        <record id="view_helpdesk_calendar" model="ir.ui.view">
            <field name="name">view.helpdesk.calendar</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <calendar string="Tickets" date_start="date" color="user_id" mode="month" hide_time="true" event_limit="5">
                    <field name="user_id" avatar_field="image_128"/>        
                    <field name="name"/>        
                    <field name="user_id" filters="1" invisible="1"/>   
                </calendar>
            </field>
        </record>         
        <record id="view_helpdesk_kanbanr" model="ir.ui.view">
            <field name="name">view.helpdesk.kanban</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <kanban default_group_by="user_id">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <span>
                                        <field name="date"/>
                                        [<field name="time" widget="float_time"/>]
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                     <div>
                                        <field name="tag_ids" widget="many2many_tags"/>
                                     </div>
                                     <div  class="oe_kanban_bottom_left">
                                        <field name="state"/>
                                        <br />
                                        <div class="o_kanban_inline_block">
                                            
                                            <field name="action_ids" widget="many2many_tags"/>
                                        </div>
                                        <div  class="oe_kanban_bottom_right">
                                            <field name="user_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>     

        <record id="helpdesk_ticket_action" model="ir.actions.act_window">
            <field name="name">Tickets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">helpdesk.ticket</field>
            <field name="view_mode">tree,kanban,calendar,pivot,graph,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new ticket
                </p>
            </field>
        </record>        
        
        <menuitem id="helpdesk_ticket_menu_action" name="Tickets" sequence="10" parent="helpdesk_menu_submenu" action="helpdesk_ticket_action"/>
</odoo>